@model IEnumerable<AVStaffing.Models.Entities.Portfolio>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
    <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">Content Management</h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Content
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Portfolio
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-column-fluid">
    <div class=" container ">
        <div class="card card-custom">
            <div class="card-header">
                <div class="card-title">
                    <span class="card-icon"><i class="fa fa-user text-primary"></i></span>
                    <h3 class="card-label">Content By Language</h3>
                </div>
                <div class="card-toolbar"></div>
            </div>
            <div class="card-body">
                <table class="table table-separate table-head-custom collapsed dataTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Language)</th>
                            <th>@Html.DisplayNameFor(model => model.HomeTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.HomeSubTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.TestimonialTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.TestimonialSubtitle)</th>
                            <th>@Html.DisplayNameFor(model => model.PackagesTitle)</th>
                          
                            <th>Actions</th>
                        </tr>
                    <thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Language)</td>
                                <td>@Html.DisplayFor(modelItem => item.HomeTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.HomeSubTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.TestimonialTitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.TestimonialSubtitle)</td>
                                <td>@Html.DisplayFor(modelItem => item.PackagesTitle)</td>
                         
                                <td>
                                    <a style="cursor: pointer !important" href="@Url.Action("CompanyPortfolio", "Content", new {id = item.Id})" id=@item.Id>
                                        Home Page
                                    </a>
                                    <br />
                                    <a style="cursor: pointer !important" href="@Url.Action("AboutUs", "Content", new {id = item.Id})" id=@item.Id>
                                        About Us
                                    </a>
                                    <br />
                                    <a style="cursor: pointer !important" href="@Url.Action("Testimonials", "Content", new {id = item.Id})" id=@item.Id>
                                        Testimonials
                                    </a>
                                    <br />
                                    <a style="cursor: pointer !important" href="@Url.Action("TermsOfService", "Content", new {id = item.Id})" id=@item.Id>
                                        Terms Of Service
                                    </a>
                                    <br />
                                    <a style="cursor: pointer !important" href="@Url.Action("ContactUs", "Content", new {id = item.Id})" id=@item.Id>
                                        Contact Us
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{


}