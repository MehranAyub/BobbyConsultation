@model IEnumerable<AVStaffing.Models.Entities.Package>
@{
    ViewBag.Title = "Proxies";

    var editPackagePermission = User.HasPermission("Package-AddPackage");
    var deletePackagePermission = User.HasPermission("Package-DeletePackage");
}


<!--begin::Subheader-->
<div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
    <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">

            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5">
                    Package Management
                </h5>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Account
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Proxies
                        </a>
                    </li>
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->

        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class=" container ">
        <!--begin::Card-->
        <div class="card card-custom">
            <div class="card-header">
                <div class="card-title">
                    <span class="card-icon"><i class="fa fa-user text-primary"></i></span>
                    <h3 class="card-label">Package List</h3>
                </div>
                <div class="card-toolbar">
                    <!--begin::Dropdown-->
                    @*<div class="dropdown dropdown-inline mr-2">
  
                    </div>*@
                    <!--end::Dropdown-->
                    @if (editPackagePermission)
                    {
                        <!--begin::Button-->
                        <a href="@Url.Action("AddPackage", "Package")" class="btn btn-primary font-weight-bolder">
                            <i class="la la-plus"></i>
                            Create new Package
                        </a>
                        <!--end::Button-->
                    
                    }
                    

                </div>
            </div>
            <div class="card-body">
                <!--begin: Datatable-->
                <!--end: Datatable-->

                <table  class="table table-separate table-head-custom collapsed dataTable">

                    <thead>
                        <tr>
                            <th>Package Name</th>
                            <th>Price</th>
                            <th>Users</th>
                            <th>Projects</th>
                            <th>Releases</th>
                            <th>Action</th>
                        </tr>
                    <thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price @(item.PriceVariable ? "+": "")</td>
                                <td>@(item.Users == -1 ? "∞" : item.Users.ToString()) </td>
                                <td>@(item.Projects == -1 ? "∞" : item.Projects.ToString())</td>
                                <td>@(item.Releases == -1 ? "∞" : item.Releases.ToString())</td>
                                <td>

                                    @if (editPackagePermission)
                                    {
                                        <a style="cursor: pointer !important" href="@Url.Action("AddPackage", "Package", new {id = item.Id})" id=@item.Id>
                                            <i class="fas fa-pencil-alt text-primary"></i>
                                        </a>
                                    }

                                    @if (deletePackagePermission)
                                    {
                                        <a style="cursor: pointer !important" href="#/" class="deletePackage" data-id="@item.Id">
                                            <i class="fas fa-trash text-danger"></i>
                                        </a>
                                    }

                                </td>
                            </tr>
                            }
                        </tbody>
                </table>
            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->



@section Scripts{
    <script>
     

        $(".deletePackage").click(function() {
            var id = $(this).data("id");
            var row = $(this).parents("tr");
            bootbox.confirm("Are you sure you want to delete this user ?",
                function(r) {
                    if (r) {
                        $.post("@Url.Action("DeletePackage", "Package")",
                                {
                                    PackageId: id
                                })
                            .done(function() {
                                $(row).remove();
                            })
                            .fail(function() {

                            });
                    }
                });
        });

    </script>
}

