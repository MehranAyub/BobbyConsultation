@model AVStaffing.Infrastructure.Permission
@{
    ViewBag.Title = "Create";
}


<!--begin::Subheader-->
<div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
    <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">

            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5">
                    Permissions Management
                </h5>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Account
                        </a>
                    </li>

                    <li class="breadcrumb-item">
                        <a href="#/" class="text-muted">
                            Update Permission
                        </a>
                    </li>
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class=" container ">
        <!--begin::Card-->

        <div class="card card-custom justify-content-center">
            <div class="card-header">
                <div class="card-title">
                    <span class="card-icon"><i class="fa fa-key text-primary"></i></span>
                    <h3 class="card-label">
                        @if (Model.Id != 0)
                        {
                            @Html.Raw("Update Permission")
                        }
                        else
                        {
                            @Html.Raw("Create Permission")

                        }
                    </h3>
                </div>
                <div class="card-toolbar"></div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        @using (Html.BeginForm())
                        {

                            <div class="form-group">
                                @Html.ValidationSummary(true)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, "Description")
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>

                            <div class="form-group">
                                @Html.EditorFor(model => model.AllowAll, new { @class = "form-control" })
                                @Html.LabelFor(model => model.AllowAll, "Allow to all roles")
                                @Html.ValidationMessageFor(model => model.AllowAll)
                            </div>
                            <div class="form-group">
                                <input class="btn btn-primary" type="submit" value="Update Permission" />
                            </div>

                        }
                    </div>
                </div>

            </div>
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>
<!--end::Entry-->

