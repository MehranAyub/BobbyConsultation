                                                    <tr>
                                                        <td>@skill.Skill.Title</td>
                                                        <td>@skill.SkillLevel</td>

                                                    </tr>
                                                    <input type="hidden" name="Skills[@i].SkillId" value="@skill.SkillId" />
                                                    <input type="hidden" name="Skills[@i].SkillLevel" value="@skill.SkillLevel" />
                                                    i++;
                                                }
                                            }
                                        </tbody>

                                    </table>
                                </div>
                                <button class="btn btn-primary" type="button" id="SkillModalBtn">Add Skill</button>
                            </div>



                            <div class="form-group">
                                <div class="float-right">
                                    <a href="@Url.Action("Workers", "Worker")" class="btn btn-default font-weight-bold btn-sm px-3 font-size-base">
                                        Back
                                    </a>

                                    <div class="btn-group ml-2">
                                        <button type="submit" class="btn btn-primary font-weight-bold btn-sm px-3 font-size-base">
                                            @if (Model.Id == 0)
                                            {
                                                @Html.Raw("Add Worker")
                                            }
                                            else
                                            {
                                                @Html.Raw("Save Changes")
                                            }
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-5">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>CV</label>
                                    @if (!string.IsNullOrWhiteSpace(Model.CVPath))
                                    {
                                        <a href="@Url.Content(Model.CVPath)" download><i class="fa fa-download text-primary"></i></a>
                                    }
                                    <input type="file" name="CVFile" id="CVFile">

                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Video</label>
                                    <br>
