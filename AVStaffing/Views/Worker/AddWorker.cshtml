            <!--end::Page Heading-->
        </div>
        <!--end::Info-->
        <!--begin::Toolbar-->
        <!--end::Toolbar-->
    </div>
</div>
<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class=" container ">
        <!--begin::Card-->
        @using (Html.BeginForm("AddWorker", "Worker", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="card card-custom justify-content-center">
                <div class="card-header">
                    <div class="card-title">
                        <span class="card-icon"><i class="fa fa-user text-primary"></i></span>
                        <h3 class="card-label">
                            @if (Model.Id != 0)
                            {

                                @Html.Raw("Update Worker")
                            }
                            else
                            {
                                @Html.Raw("Create Worker")
                            }
                        </h3>
                    </div>
                </div>


                <div class="card-body">
                    <div class="row">

                        <div class="col-md-7 my-2">
                            <div class="form-group row">
                                @Html.ValidationSummary(true)
                            </div>

                            <div class="form-group">
                                @Html.HiddenFor(x => x.Id)
                                @Html.LabelFor(x => x.FirstName)
                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                @Html.ValidationMessageFor(x => x.FirstName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Surname)
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", placeholder = "Surname" })
                                @Html.ValidationMessageFor(x => x.Surname)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Nickname)
                                @Html.TextBoxFor(x => x.Nickname, new { @class = "form-control", placeholder = "Nickname" })
                                @Html.ValidationMessageFor(x => x.Nickname)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Email)
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Mobile)
                                @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control", placeholder = "Mobile" })
                                @Html.ValidationMessageFor(x => x.Mobile)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Gender)
                                @Html.DropDownListFor(x => x.Gender, new List<SelectListItem>(){
                                    new SelectListItem { Text = "Male", Value =  "Male" },
                                    new SelectListItem { Text =  "Female", Value = "Female"}}
                                    , new { @class = "form-control", placeholder = "Gender" })
                                @Html.ValidationMessageFor(x => x.Gender)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.CompanyId, "Company")
                                @Html.DropDownListFor(x => x.CompanyId, Companies.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() }).ToList()
                                    ,"Select Company" , new { @class = "form-control", placeholder = "Company" })
                                @Html.ValidationMessageFor(x => x.CompanyId)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ContractTermMonths, "Contract Terms")
                                @Html.TextBoxFor(x => x.ContractTermMonths, new {@class="form-control", placeholder="Contract Terms"})
                                @Html.ValidationMessageFor(x => x.ContractTermMonths)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.Town)
                                @Html.TextBoxFor(x => x.Town, new { @class = "form-control", placeholder = "Town" })
                                @Html.ValidationMessageFor(x => x.Town)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Province)
                                @Html.TextBoxFor(x => x.Province, new { @class = "form-control", placeholder = "Province" })
                                @Html.ValidationMessageFor(x => x.Province)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.City)
                                @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "City" })
                                @Html.ValidationMessageFor(x => x.City)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Country)
                                @Html.TextBoxFor(x => x.Country, new { @class = "form-control", placeholder = "Country" })
                                @Html.ValidationMessageFor(x => x.Country)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.PostCode)
                                @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control", placeholder = "Post Code" })
                                @Html.ValidationMessageFor(x => x.PostCode)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(x => x.MinSalary, "Salary")
                                @Html.TextBoxFor(x => x.MinSalary, new { @class = "form-control", placeholder = "Salary" })
                                @Html.ValidationMessageFor(x => x.MinSalary)
                            </div>


                            <div class="form-group" id="skills">
                                <div class="skilsList">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Skill Name</th>
                                                <th>Skill Level</th>
                                            </tr>
                                        </thead>
                                        <tbody id="Skillbody">
                                            @{
